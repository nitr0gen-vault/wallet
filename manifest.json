{
    "name": "Nitr0gen",
    "version": "2.8",
    "homepage_url": "https://www.myapp.com",
    "description": "Nitr0gen Crypto Wallet",
    "icons": {
        "16": "assets/icon/favicon-16x16.png",
        "32": "assets/icon/favicon-32x32.png"
    },
    "manifest_version": 2,
    "background": {
        "scripts": [
            "assets/js/background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_icon": {
            "16": "assets/icon/favicon-16x16.png",
            "32": "assets/icon/favicon-32x32.png"
        },
        "default_title": "Nitr0gen",
        "default_popup": "index.html"
    },
    "permissions": [
        "notifications",
        "storage"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'; connect-src https://nitr0gen.oa.r.appspot.com"
}